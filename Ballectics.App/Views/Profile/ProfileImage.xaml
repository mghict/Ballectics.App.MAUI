<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ballectics.App.Views.Profile.ProfileImage">
    <VerticalStackLayout>
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="40" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1"
                BackgroundColor="Transparent"
                Margin="0,10,0,0"
                Stroke="#E4C9C9"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                WidthRequest="100"
                HeightRequest="100">
                <Border.StrokeShape>
                    <Ellipse/>
                </Border.StrokeShape>
                <Image x:Name="imgProfile" 
                   WidthRequest="100"
                   HeightRequest="100"
                   Aspect="AspectFill"
                   Source="{Binding PersonInfo.ImageSource}"
                   VerticalOptions="Center"
                   HorizontalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectImageCommand}" />
                    </Image.GestureRecognizers>
                </Image>

            </Border>
            <ImageButton Grid.Column="2" 
               WidthRequest="40"
               HeightRequest="40"
               Aspect="AspectFill"
               Source="qrcode.png"
               VerticalOptions="Center"
               HorizontalOptions="Start"
               Command="{Binding ShowQRCodeCommand}" />
            <!--<ImageButton.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ShowQRCodeCommand}" />
            </ImageButton.GestureRecognizers>-->
            <!--</ImageButton>-->
        </Grid>
        <BoxView WidthRequest="200" 
             HorizontalOptions="Center" 
             BackgroundColor="#E4C9C9"
             HeightRequest="1"
             Margin="10"/>
    </VerticalStackLayout>
</ContentView>
