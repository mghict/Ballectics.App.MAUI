<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ballectics.App.Views.HeaderIcon">
    <Grid Margin="0,0,0,10" >
        <Image  Source="logo_balletics.png"
            Aspect="AspectFit" 
            WidthRequest="180" 
            Margin="0,10,0,10" 
            VerticalOptions="Center"
            HorizontalOptions="Start"/>
        <HorizontalStackLayout VerticalOptions="Center"
                           HorizontalOptions="End"
                           Margin="0"
                           Spacing="0">

            <Button FontFamily="fab" 
                    FontSize="24" 
                    TextColor="#E4C9c9"
                    BackgroundColor="Transparent"
                    Text="&#xf09a;" Padding="0"
                    x:Name="btnFacebook"
                    Clicked="btnFacebook_Clicked"/>
            <Button FontFamily="fab" 
                    FontSize="24" 
                    TextColor="#E4C9c9"
                    BackgroundColor="Transparent"
                    x:Name="btnInstagram"
                    Clicked="btnInstagram_Clicked"
                    Text="&#xf16d;" 
                    Padding="0" />
            <Button FontFamily="fab" 
                    FontSize="24" 
                    TextColor="#E4C9c9"
                    BackgroundColor="Transparent"
                    Text="&#xf167;" Padding="0" 
                    x:Name="btnYouTube"
                    Clicked="btnYouTube_Clicked"/>
        </HorizontalStackLayout>
        <BoxView VerticalOptions="End" HorizontalOptions="End"
                 BackgroundColor="#E4C9C9"
                 WidthRequest="800"
                 HeightRequest="1"/>
    </Grid>
</ContentView>
