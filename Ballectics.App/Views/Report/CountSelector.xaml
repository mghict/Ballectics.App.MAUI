<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ballectics.App.Views.Report.CountSelector">
    <VerticalStackLayout>
        <Frame Padding="5" 
       CornerRadius="10" 
       BackgroundColor="LightGray" >
            <VerticalStackLayout>
                <HorizontalStackLayout VerticalOptions="Center" Margin="10,5,0,0">
                    <Label Text="&#xf1ec; "
                               FontFamily="fa"
                               TextColor="Black"
                               FontSize="16"
                               VerticalOptions="Center"/>
                    <Label Text="Zahlen:" 
                               FontSize="16" 
                               FontFamily="robotoR"
                               />
                </HorizontalStackLayout>

                <Picker x:Name="CountPicker" Margin="10,0,10,0"/>

                <Button Text="Daten anzeigen"
                            Clicked="OnSubmitClicked"
                            BackgroundColor="DarkBlue"
                            TextColor="White"
                            Margin="5"/>

            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentView>
