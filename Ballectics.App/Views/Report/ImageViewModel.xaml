<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ballectics.App.Views.Report.ImageViewModel">
    <VerticalStackLayout>
        <Border 
            BackgroundColor="Transparent"
            Margin="0,5,0,0"
            Stroke="{Binding TypeColor}"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            WidthRequest="60"
            HeightRequest="60">
            <Border.StrokeShape>
                <Ellipse/>
            </Border.StrokeShape>
            <Image x:Name="imgProfile" 
               WidthRequest="58"
               HeightRequest="58"
               Aspect="AspectFill"
               Source="{Binding ImageSource}"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>

        </Border>
    </VerticalStackLayout>
</ContentView>
